<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.paliokimotoramano.alohatourguide.ExplorePage" >

    <Button
        android:id="@+id/myListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/exploreButton"
        android:layout_alignBottom="@+id/exploreButton"
        android:layout_toRightOf="@+id/exploreButton"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:textStyle="bold"
        android:text="My List" />

    <ImageButton
        android:id="@+id/like_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/exploreButton"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/like_button_final"
        android:src="@drawable/like_button_final" />

    <ImageButton
        android:id="@+id/dislike_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/myListButton"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="11dp"
        android:background="@drawable/dislike_button_final"
        android:src="@drawable/dislike_button_final" />

    <Button
        android:id="@+id/exploreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="133dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:textStyle="bold"
        android:text="Explore" />

    <ImageView
        android:id="@+id/exploreImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dislike_button"
        android:layout_below="@+id/eventName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:maxWidth="400dp"  
 		android:maxHeight="600dp"
        android:src="@drawable/waimeabw" />

    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exploreButton"
        android:layout_below="@+id/myListButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="          Event Name        "
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/skip_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="SKIP"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/undo_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="UNDO"
        android:textSize="20sp"
        android:textStyle="bold" />

     <ImageButton
         android:id="@+id/more_information_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/skip_button"
         android:layout_alignRight="@+id/skip_button"
         android:layout_marginBottom="14dp"
         android:src="@drawable/more_information_button" />

</RelativeLayout>